@using WebApp.Models
@model List<ViewModel>

<style>
    table {
        border: 1px solid black;
        margin-top: 40px;
    }

    table td {
        padding: 5px;
        border: 1px solid black;
    }
</style>

<table>
    <tr>
        <th>name</th>
        <th>ean</th>
        <th>quantity</th>
    </tr>

    @for(int i = 0; i < Model.Count(); i++)
    {
    <tr>
        <td>@Model[i].ProductName</td>
        <td>@Model[i].Ean</td>
        <td>@Model[i].QuantitySold</td>

    </tr>
    }
</table>
